        <section class="summary-chart">
            <div class="box1 first">
                <div class="box-goals "></div>
                <div class="box-goals"></div>
                <div class="box-goals"></div>
                <div class="box-goals"></div>
                <div class="box-goals"></div>
                <div class="box-goals"></div>
                <div class="box-goals"></div>
                <div class="box-goals goals-low"></div>
                <div class="box-goals goals-high"></div>
                <div class="box-goals goals-high"></div>
            </div>
            <div class="box1 ">
                <div class="box-goals flags-medium"></div>
                <div class="box-goals flags-medium"></div>
                <div class="box-goals flags-high"></div>
                <div class="box-goals flags-high"></div>
            </div>
            <div class="box1 ">
                <div class="box-goals risks-medium"></div>
                <div class="box-goals risks-medium"></div>
                <div class="box-goals risks-high"></div>
                <div class="box-goals risks-high"></div>
            </div>
            <br>
            <div class="box2">
                <h5>Goals</h5>
            </div>
            <div class="box2">
                <h5>Red Flags</h5>
            </div>
            <div class="box2">
                <h5>Risks</h5>
            </div>
        </section>
    </div>
    <hr>
    <br>
    <div class="content-l content-l__main">
        <div class="content-l_col content-l_col-1-2">

            <section class="worksheet worksheet-summary worksheet-goals-summary">
                <header class="worksheet-summary_header">
                    <h2 class="h3">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1200" class="cf-icon-svg"><path d="M500 105.2c-276.1 0-500 223.9-500 500s223.9 500 500 500 500-223.9 500-500-223.9-500-500-500zm259 284.2L481.4 870.3c-8.2 14.1-22.7 23.4-39 24.8-1.4.1-2.9.2-4.3.2-14.8 0-28.9-6.6-38.4-18L244.4 690.9c-17.9-21-15.4-52.6 5.7-70.5 21-17.9 52.6-15.4 70.5 5.7.2.3.5.5.7.8l109.4 131.4 241.8-418.8c13.6-24 44.2-32.4 68.2-18.8 24 13.6 32.4 44.2 18.8 68.2l-.5.5z"/></svg>
                        Goals
                    </h2>
                </header>
                {{#if goalsError}}
                    {{> summaryError this.goalsError}}
                {{else}}
                    {{> summarySection this.goals.[0]}}
                    {{> summarySection this.goals.[1]}}
                    {{> summarySection this.goals.[2]}}
                {{/if}}
            </section>

        </div>
        <div class="content-l_col content-l_col-1-2 worksheet worksheet-summary worksheet-flags-summary">

            <section class="worksheet worksheet-summary worksheet-flags-summary">
                <header class="worksheet-summary_header">
